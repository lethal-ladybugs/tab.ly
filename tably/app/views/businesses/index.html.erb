<h1>Search Results</h1>

	<% counter = 1 %>
	<% spacing = ". " %>

	<% @parsed['businesses'].each do |biz| %>
		<div class="pure-g">
			<div class="pure-u-1-3">
					<a href="/businesses/<%=biz['id']%>"><img class="yelp-photo" src="<%=biz['image_url']%>" alt=""></a>
			</div>
				
			<div class="pure-u-1-3">
					<h3 class="name"><%= counter %><%= spacing %><a href="/businesses/<%=biz['id']%>"><%=biz['name']%></a></h3>
					<% if biz['categories'] %>
						<p class="cateogory"><%=biz['categories'] %></p>
					<% end %>
			</div>

			<div class="pure-u-1-3">
				<% location = biz['location'] %>
				<% phone = biz['display_phone'] %>
					<% if biz['neighborhoods'] %>
						<div class="neighborhood">
							<br><%=	biz['neighborhoods'] %>
						</div>
					<% else %>
						<div class="no-neighbhor-address">
							<br><%=	biz['neighborhoods'] %>
						</div>
					<% end %>
				<%= location['address'][0] %>
				<%= location['city'] %>
				<br><%= location['state_code'] %>
				<%=	location['postal_code'] %>
						
						<% if phone %>
				<br><%= phone.gsub('+', '') %><br>
						<% end %>

				<% if biz['neighborhoods'] %>
					<a href="/businesses/<%=biz['id']%>"><button class="button-large pure-button">Go!</button></a>
				<% else %>
					<div class="button-div">
					<a href="/businesses/<%=biz['id']%>"><button class="button-large pure-button no-neighb-button">Go!</button></a>
					</div>
				<% end %>
			</div>
		</div>
		<hr>
		<% counter += 1 %>
	<% end %>



