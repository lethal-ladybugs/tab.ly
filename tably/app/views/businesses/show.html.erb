<h3>Add employee/job</h3>



<div id="form" style="display:none">
<%= form_tag('/businesses/' + @business['id'] + '/jobs', method: 'post') do %>
<%= label_tag(:position, "JOB POSITION:")%>
<%= text_field_tag(:position) %>
<%= submit_tag("submit") %>
<% end %>
</div>

<%= link_to_modal "Form", "#form", :class => "button" %>

<h1><%= @business['name'] %></h1>
<% @employees.each do |employee| %>
<% array = [] %>
	<a href="/businesses/<%=employee.yelp_id%>/jobs/<%=employee.id%>"><h3><%=employee.user.fullname %></h3></a>
		<% employee.ratings.each do |ratings| %>
			<% if ratings.good == true %>
				<% x = ratings.good %>
				<% array.push(x) %>
				<% end %>
		<% end %>
	<h3>RATING: <%= array.length %></h3>
<% end %>