<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= @job.user.fullname %></title>
</head>
	<div class="link-bar">
		<a href="#" class="back"></a>
	</div>

<div class="outer-busi-div">
	<div class="business-info">
		<h1><%= @business[:name] %></h1>

		<h3> <%= @business[:address] %> </h3>
		<h3> <%= @business[:phone] %></h3>
	</div>
</div>

<div id="job-info" class="pure-g">
	<div class="pure-u-1-2">
		<div class="image">
			<%= image_tag @job.user.avatar.url(:medium) %>
		</div>
	</div>

	<div class="pure-u-1-2 text-center">
		<div class="desc">
			<% if @job.user.fullname %>
				<p class="name"> <%= @job.user.fullname %> </p>
				<p class="position"> <%= @job.position %> </p>
			<% else %>
				<h2 class="name"> Alex Deschamps </h2>
				<h3 class="position">Waiter</p></h3>
			<% end %>
				<div class="desc">
					<p class='ratings'><%= @job.rating_count %></p>
					<img id="tiny-heart" src="/assets/heart.png">
				</div> 
		</div>
		<% if current_user %>
		<div id="rate" style="display:none">
			<%= image_tag @job.user.avatar.url(:medium), :class => "photo-inside-modal" %>
			<div class="like-buttons-container">
				<img id="dislike" src="/assets/x_unchecked.png">
				<img id="like" src="/assets/unchecked_heart.png">
			</div>
			<%= form_tag('/businesses/' + @job.business_id.to_s + '/jobs/' + @job.id.to_s + '/ratings', method: 'post') do %>
			<%= radio_button_tag(:button, true) %>
			<%= label_tag(:like_button, "Like Me?") %>
			<%= radio_button_tag(:button, false) %>
			<%= label_tag(:dislike_button, "Don't like") %>
			<button class="pure-button pure-button-primary submit-modal-button">Submit Review</button>
		 <% end %>
		</div>
		<%= link_to_modal "Rate Me !", "#rate",  :class => "pure-button rate-me-button" %>
		<% else %>
		<%= link_to_modal "Login to Rate", "#form", :class => "pure-button rate-me-button" %>
		<% end %>
	</div>

</div>



<body>
	
</body>
</html>